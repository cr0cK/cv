{
  "name": "resume",
  "version": "2019.0.0",
  "description": "Alexis Mineaud's resume",
  "main": "gulpfile.js",
  "scripts": {
    "prepare:dist": "mkdir dist/assets -p",
    "build:less": "lessc src/styles/index.less dist/styles.css",
    "build:assets": "cp -r src/assets/* dist/assets",
    "build:html": "cp src/index.html dist/index.html",
    "build:all": "npm run prepare:dist && npm run build:less && npm run build:html && npm run build:assets",
    "start:dev": "nodemon -w src -e html,less -x \"npm run build:all\"",
    "publish": "git subtree push --prefix www origin gh-pages",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cr0cK/resume.git"
  },
  "author": "Alexis Mineaud",
  "bugs": {
    "url": "https://github.com/cr0cK/resume/issues"
  },
  "homepage": "https://github.com/cr0cK/resume",
  "devDependencies": {
    "concurrently": "^5.0.0",
    "less": "^3.10.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2"
  }
}
